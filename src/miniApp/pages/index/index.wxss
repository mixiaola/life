.content-banner{
  height:460rpx;
  background: #fff;
}
.content-banner swiper{
  height: 100%;
  width: 100%;
}
.content-banner swiper swiper-item{
  width: 100%;
}
.content-banner swiper swiper-item image{
  width: 100%;
}
.content-change{
  font-size:28rpx;
  position: relative;
}
.content-change .content-change-auto{
  display: inline-block;
  vertical-align: top;
  height: 100rpx;
  line-height: 100rpx;
}
.content-change .content-change-auto .filter-open{
  width: 30rpx;
}
.change-left{
  margin-left: 32rpx;
  margin-right: 100rpx;
}
.change-center{
  color: #666;
}
.change-center image{
  width: 60rpx;
  height: 40rpx;
  display: inline-block;
  vertical-align: top;
  margin-top: 28rpx;
}
.change-right{
  color: #666;
  float: right;
  margin-right: 20rpx;
}
.content-dialog-type{
  top: 80rpx;
  right: 20rpx;
  height: 320rpx;
  background: #fff;
  position: absolute;
  font-size: 28rpx;
  width: 260rpx;
  text-align: center;
  border-radius: 7px;
  z-index: 9;
}
.content-dialog-type view{
  height: 80rpx;
  line-height: 80rpx;
  width: 100%;
}
.content-shop{
  position: relative;
  color:#fff;
  width:100%;
  height: 480rpx;
  margin-bottom:20rpx;
}
.content-shop image{
  width: 100%;
  height: 100%;
}
.content-shop .shop-title{
  position: absolute;
  font-size: 36rpx;
  left: 32rpx;
  bottom: 120rpx;
  z-index: 10;
  width: 60%;
}
.content-shop .shop-content{
  position: absolute;
  font-size: 36rpx;
  left: 32rpx;
  bottom: 74rpx;
  z-index: 10;
   width: 60%;
}
.content-shop .shop-time{
  position: absolute;
  font-size: 24rpx;
  bottom: 20rpx;
  left: 32rpx;
  z-index: 10;
   width: 45%;
}
.content-shop .shop-address{
  position: absolute;
  font-size: 24rpx;
  bottom: 20rpx;
  right: 32rpx;
  z-index: 10;
  width: 45%;
}
.dialog1{
  height: 112rpx;
  line-height: 112rpx;
  width: 100%;
  position: fixed;
  bottom: 120rpx;
  background: linear-gradient(to right, #FF8237, #E62727);
  z-index: 100;
  font-size: 28rpx;
  color: #fff;
  text-align: center;
}
.dialog1 image{
  width: 30rpx;
  height: 30rpx;
  margin-top: 40rpx;
  vertical-align: top;
  margin-right: 10rpx;
}